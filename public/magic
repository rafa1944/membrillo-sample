require __DIR__.'/../vendor/autoload.php';

$longopts = array(
    "newsecc:",
    "newmodel:",
);
$params = getopt('', $longopts);

// Run the Magic command
$magic = new angelrove\membrillo\Magic\Magic(__DIR__);
$magic->command($params);